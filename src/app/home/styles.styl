.logo
    height: ($bar-height - 25pt);

.beta-container
    margin-left: 5px;
    display: inline-block;
    vertical-align: top;
    position: relative;
    top: 0px;

.link-active
    color: $text-color !important;
    
.content
    padding-top: 20pt;

.signin-button
    font-size: 0.8em;
    
    composes: button;
    composes: button-flat;
    composes: button-flat-moody;
    
    //padding: 0.4em 0.8em !important;
    color: white !important;
    height: auto !important;

.create-button
    font-size: 0.8em;
    
    composes: button;
    composes: button-flat;
    composes: button-flat-warning;
    
    //padding: 0.4em 0.8em !important;
    color: white !important;
    height: auto !important;
    
    span
        font-size: 0.9em;

.account-button
