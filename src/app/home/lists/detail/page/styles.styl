.banner
    width: 100%;
    height: 250px;
    position: relative;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;

    .overlay
        position: absolute;
        background: rgba(0, 0, 0, 0.4);
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;

        .content
            display: table;
            width: 100%;

            .title
                display: table-cell;
                width: 100%;
                height: 250px;
                vertical-align: middle;
                text-align: center;
                color: white;