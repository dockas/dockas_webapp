@require "~darch/src/styles/variables"

.paypal-btn-container
    text-align: center;
    margin-top: 30px;
    
    iframe
        display: inline-block !important;

.loading-container
    text-align: center;
    margin-top: 30px;
    
    .spinner-container
        margin-left: 10px;

:global(.xcomponent-paypal-button)
    margin: 0 auto;

.coupons-container
    max-width: 500px;
    width: 100%;
    margin-bottom: 50px;
    
.applied-coupons-container
    .title
        margin-right: 5px;
        font-size: 0.8em;
        
    span + span
        margin-left: 5px;

.payment-methods-tabs-container
    ul
        border-bottom-color: #ddd;
        
        li + li
            margin-left: 10px;
    
    a
        padding-top: 0;
     
    :global(.tabs-item-align-left)
        a
            padding-left: 0;
            padding-right: 15px;
    
    :global(.tabs-item-align-right)
        a
            padding-left: 15px;
            padding-right: 0;

.sidebar-container
    padding-left: 20px;
    padding-top: 40px;

.checkout-box
    padding: 15px;
    border: 5px solid #f1f1f1;
    
    .title
        margin: 0
        margin-bottom: 10px;

    .discount-info-container
        border-bottom: 1px solid #eee;
        padding-bottom: 10px;

    .total-price-container
        margin-top: 10px;
        
        .price-value
            font-size: 32px;
            font-weight: 800;
    
    .button-container
        margin-top: 20px;

.separator
    //height: 15px;
    //background: #f5f5f5;
    margin: 30px 0;
    padding: 10px;
    background: -webkit-repeating-linear-gradient(45deg, transparent, transparent 8px, rgba(0,0,0,0.1) 8px, rgba(0,0,0,0.1) 10px)
    background: repeating-linear-gradient(45deg, transparent, transparent 8px, rgba(0,0,0,0.1) 8px, rgba(0,0,0,0.1) 10px);
    
    
.section
    padding: 0 30px;

.panel
    background: #f9f9f9;
    border: 3px solid #efefef;
    padding: 10px 20px;
    border-radius: 5px;
    font-size: 0.8em;
    cursor: pointer;
    
    &.panel-card
        text-align: center;
        
        span
            display: inline-block;
            vertical-align: bottom;
            
        span[class*="icon-"]
            font-size: 1.8em;
    
    &:hover
        background: #f6f6f6;
        
    &.active
        border-color: #89C4F4;

    .title
        font-weight: 600;

.address-panel + .address-panel
    margin-top: 10px;