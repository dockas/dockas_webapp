@require "~darch/src/styles/variables";

itemStyl()
    > div > :global(.dropdown) > a,
    > :global(.dropdown) > a,
    > a
        font-size: 0.8em;
        font-weight: 800;
        color: #b2b2b2;
        padding: 0 5px;
        
        &:hover
            color: rgba(255,255,255,.8);
    
    > :global(.dropdown) > div,
    > div > :global(.dropdown) > div
        margin-top: -7px;
        
    > a
        &:global(.active)
            color: white;
    
    > div > :global(.dropdown) > a,
    > :global(.dropdown) > a
        &:global(.active)
            color: rgba(255,255,255,.8);

.item-screen-lg
    > div > :global(.dropdown) > a
        height: $bar-height;
        display: table-cell;
        vertical-align: middle;

.item
    padding: 0 5px;
    
    itemStyl() 