@require "~darch/src/styles/variables";
@require "~darch/src/styles/utils";

.card 
    padding: 20px;
    position: fixed;
    bottom: 10px;
    right: 10px;
    background: white;
    z-index: 100;
    
    @media (min-width: $screen-tablet-min)
        border: 1px solid #f1f1f1;
        shadow(0px 1px 8px #bbb);
    
    @media (max-width: $screen-phone-max)
        left: 0;
        bottom: 0;
        right: 0;
        border-top: 1px solid #eee;
        background: #f9f9f9;

.total-with-fees
    font-size: 0.7em;
    color: #aaa;

.price
    font-size: 1.5em;
    font-weight: 600;
    color: $color-moody;

.separator
    margin: 0 5px 0 10px;

.items
    font-size: 0.8em;

.list-name-container
    margin-bottom: 5px;
    span
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;