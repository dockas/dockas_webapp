@require "~darch/src/styles/variables";
@require "~darch/src/styles/utils";

.card 
    padding: 20px;
    position: fixed;
    bottom: 10px;
    right: 10px;
    background: white;
    z-index: 100;
    
    border: 1px solid #f1f1f1;
    shadow(0px 1px 8px #bbb);

.price
    font-size: 1.5em;
    font-weight: 600;
    color: $color-moody;

.separator
    margin: 0 5px 0 10px;

.items
    font-size: 0.8em;

.list-name-container
    margin-bottom: 5px;
    span
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;