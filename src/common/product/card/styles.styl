@require "~darch/src/styles/variables";

.card
    cursor: pointer;
    padding: 10pt 0 20pt 0;
    position: relative;

    //background: #f5f5f5;
    //border: 1pt solid #f1f1f1;
    
    //&:hover
        //border: 1pt solid #ddd;
    
    .tags-container
        padding: 0 10pt;
        
        .tag
            font-size: 0.7em;
            display: inline-block;
            padding: 1px 5px;
            border-radius: 3px;

    .counter-bag
        display: inline-block;
        background: $color-moody;
        padding: 1px 12px;
        border-top-left-radius: 10em;
        border-top-right-radius: 10em;
        border-bottom-right-radius: 10em;
        border-bottom-left-radius: 10em;
        color: white;
        font-size: 1em;
        position: absolute;
        top: 10px;
        right: 10px;

    .price
        padding: 0 10pt;
        font-weight: 800;
        margin-bottom: 3pt;

    .name
        padding: 0 10pt;
        font-size: 0.8em;
        
        textarea
            border: none;
            padding: 0;
            margin: 0;
            outline: none;
            overflow: hidden;
            resize: none;
            background: transparent;

    .image-container
        padding: 20pt;
        position: relative;
        
        .overlay
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            background: rgba(255,255,255,0.8);
            //height: 100pt;
            border-top: 1px solid #f1f1f1;
            padding: 20px 10px;
            text-align: right;
            
            button
                padding-left: 0.5em;
                padding-right: 0.5em;
                
            button + button
                margin-left: 5px;

        .image
            width: 100%;
            padding-top: 100%; /* 1:1 Aspect Ratio */
            position: relative;