.card
    border-radius: 3px;
    border: 1px solid #eee;
    display: inline-block;
    line-height: 0;
    width: 100%;

    .body
        padding: 5px;
        position: relative;

        .banner-image
            width: 100%;
            height: 80px;

        .overlay
            background: rgba(0, 0, 0, 0.3);
            position: absolute;
            top: 5px;
            left: 5px;
            bottom: 5px;
            right: 5px;

            .content
                display: table;

                .title
                    display: table-cell;
                    width: 200px;
                    height: 80px;
                    vertical-align: middle;
                    text-align: center;
                    color: white;

.card + .card
    margin-left: 15px;
