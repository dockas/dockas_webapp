.card
    //border-radius: 3px;
    //border: 1px solid #eee;
    display: block;
    //line-height: 0;
    width: 100%;
    text-decoration: none !important;
    color: #777 !important;

    .header
        padding: 0px;
        position: relative;

        .banner-image
            width: 100%;
            padding-top: 40%;

        .overlay
            background: rgba(0, 0, 0, 0.3);
            position: absolute;
            top: 0px;
            left: 0px;
            bottom: 0px;
            right: 0px;

            .content
                display: table;
                width: 100%;

                .title
                    display: table-cell;
                    width: 100%;
                    vertical-align: middle;
                    text-align: center;
                    color: white;
    
    .body
        font-size: 0.8em;
        padding-top: 5px;
        
        .price
            font-weight: 800;
            color: #555 !important;
        .name
            margin-left: 5px;